{% extends 'base.html.twig' %}

{% block content %}

<div class="max-w-sm mx-auto"> 
    <h1 class="text-white text-4xl font-bold animate-fadeIn">Games</h1>

{% for game in games %}        
        <a href="#" class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-5">
{% if game.imageName is not null %}
	<img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="{{ asset('images/games/' ~ game.imageName) }}" alt="{{ game.name }}">
{% else %}
	<!-- Si l'image n'est pas définie, vous pouvez afficher une image par défaut ou un message -->
	<img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="{{ asset('images/games/default_image.jpg') }}" alt="Default Image">
{% endif %}

            <div class="flex flex-col justify-between p-4 leading-normal">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{game.name}}</h5>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{game.description}}</p>
            </div>
        </a>

    {% else %}
<p class="text-white">no games found</p>

    
    {% endfor %}

</div>
{% endblock %}